@using SystemRecommenderApp.Models
@using Microsoft.AspNet.Facebook.Models
@model MyAppUser
@{
    ViewBag.Title = "Home Page";
}

<article class="intro">
    <h4>Zatražite preporuke sadržaja kategorički. Preporuke su bazirane na interesima vaših prijatelja.</h4>
</article>

<article id="content">
    <div class="left">
        <h4>Prijatelji koji koriste aplikaciju:</h4>
        @if (Model.Friends != null && Model.Friends.Data != null && Model.Friends.Data.Count > 0)
        {
            foreach (var myFriend in @Model.Friends.Data)
            {
                <a href="@myFriend.Link" target="_blank">
                        <div class="photoTile">
                            <label>@myFriend.Name</label>
                            @if (myFriend.Picture != null && myFriend.Picture.Data != null)
                            {
                                <img src="@myFriend.Picture.Data.Url" />
                            }
                        </div>
                </a>
            }
        }
        else
        {
            <p>Nitko od vaših prijatelja ne koristi ovu aplikaciju. :(</p>
        }
    </div>
    <div class="right">
        <h4>Odaberite vrstu sadržaja za preporučivanje:</h4>
        <form>
            <div class="well carousel-search hidden-sm">
                <div class="btn-group">
                    <a class="btn btn-default dropdown-toggle btn-select"data-toggle="dropdown" href="#">Vrsta sadržaja<span class="caret"></span></a>
                    <ul class="dropdown-menu" id="btnSelect">
                        <li><a href="#" id="Movies">Filmovi</a></li>
                        <li><a href="#" id="Television">TV serija</a></li>
                        <li><a href="#" id="Books">Knjige</a></li>
                        <li><a href="#" id="Music">Muzičari/Bendovi</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" id="btnSearch" class="btn btn-primary">Pokreni</button> 
                </div>
            </div>
        </form>
        <div id="directions_panel" style="margin:20px;"></div>
        @*@if (Model.Likes != null && Model.Likes.Data != null && Model.Likes.Data.Count > 0)
        {
            foreach (var like in @Model.Likes.Data)
            {
                <p>@like.Name, @like.Category</p>
            }
        }*@
        @if (Model.Television != null && Model.Television.Data != null && Model.Television.Data.Count > 0)
        {
            foreach (var e in @Model.Television.Data)
            {
                <a href=@e.Link>@e.Name</a><br/>
            }
        }
        

    </div>
</article>
